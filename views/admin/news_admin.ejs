<div class="admin-title">
  <a href="/dashboard">&larr; Back</a>
  <h2>Posts</h2>
  <a href="/add-post" class='button'>+ Add New</a>
</div>

<ul class="admin-posts">
<%data.forEach(News=>{%>
  <li>
    <a href="/news/<%=News._id%>">
      <%=News.title%> &nearr;
      </a>
      <div class="admin-post-controls">
        <span><%=News.createdAt.toDateString()%></span>
<a href="/edit-post/<%=News._id%>" class='btn'>Edit</a>
<form class="" action="/delete-post/<%=News._id%>?_method=DELETE" method="POST">
<input type="submit" class="btn" value="Delete">
</form>
      </div>
  </li>
<%})%>



</ul>
